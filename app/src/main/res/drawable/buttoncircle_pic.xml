<?xml version="1.0" encoding="UTF-8"?>  
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
<!-- 连框颜色值 --><item>   
  <shape>   
    <solid android:color="#e6e6e6" />   
    <corners android:radius="6px" />    
       
  </shape>   
</item>   
<!-- 主体背景颜色值 -->  
<item android:bottom="2px" android:right="2px" android:top="2px" android:left="2px">   
     <shape>   
    <gradient android:startColor="#FFFFFF" android:centerColor="#FFFFFF" 
    android:endColor="#FFFFFF" android:type="linear" android:angle="90"  
    android:centerX="0.5" android:centerY="0.5" />  
   
    <padding android:left="2px" android:top="2px" android:right="2px"  
    android:bottom="2px" />  
   <!-- 应该是圆角 -->
    <corners android:radius="6px" />    
     </shape>	 
</item>  
</layer-list>
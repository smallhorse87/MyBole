<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#f2f2f2">
    <LinearLayout
        android:orientation="horizontal" android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="#feb416"
        android:divider="@mipmap/line"
        android:dividerPadding="@dimen/space_10"
        android:showDividers="middle"
        android:layout_marginBottom="10dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20"
                android:id="@+id/tv_left_count"
                android:textColor="#ffffff"
                android:textSize="45dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="今日新增玩家"
                android:id="@+id/tv_left_title"
                android:layout_gravity="center_horizontal"
                android:textColor="#ffffff"
                android:textSize="13dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20"
                android:id="@+id/tv_right_count"
                android:textColor="#ffffff"
                android:textSize="45dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="玩家总数"
                android:id="@+id/tv_right_title"
                android:layout_gravity="center_horizontal"
                android:textColor="#ffffff"
                android:textSize="13dp" />
        </LinearLayout>

    </LinearLayout>

    <include layout="@layout/divider_h_no_margin" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#ffffff">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView18"
            android:layout_weight="2"
            android:layout_gravity="center_vertical"
            android:textIsSelectable="false"
            android:layout_marginLeft="10dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="玩家数"
            android:id="@+id/textView19"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:layout_gravity="center_vertical"
            android:textColor="#989898"
            android:textSize="13dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="浏览量"
            android:id="@+id/textView20"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:layout_gravity="center_vertical"
            android:textColor="#989898"
            android:textSize="13dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="转发数"
            android:id="@+id/textView21"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:layout_gravity="center_vertical"
            android:textColor="#989898"
            android:textSize="13dp"
            android:layout_marginRight="10dp" />
    </LinearLayout>

    <include layout="@layout/divider_h_bothside_margin" />

</LinearLayout>
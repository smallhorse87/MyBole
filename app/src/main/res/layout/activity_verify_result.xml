<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.zhitian.mybole.activity.code.VerifyResultActivity"
    android:background="#f2f2f2">

    <LinearLayout
        android:visibility="false"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="30dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#ffffff">

            <ImageView
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:id="@+id/imageView8"
                android:background="#e6e6e6"
                android:layout_margin="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="这是一个标题这是一个标题这是一个标题"
                android:id="@+id/textView17"
                android:textSize="15dp"
                android:textColor="#4d4d4d"
                android:layout_marginTop="15dp"
                android:maxLines="2"
                android:layout_marginRight="10dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="24dp">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@mipmap/icon_success"
                android:id="@+id/imageView9"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="验证成功"
                android:id="@+id/textView29"
                android:textSize="18dp"
                android:textColor="#4d4d4d"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_vertical" />
        </LinearLayout>

        <Button
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:text="继续验证"
            android:id="@+id/button2"
            android:background="@drawable/btn_round_gray_outline_selector"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="24dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/imageButton"
            android:src="@mipmap/icon_fail"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="125dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="无效验证码"
            android:id="@+id/textView18"
            android:textColor="#4d4d4d"
            android:textSize="18dp"
            android:layout_marginTop="14dp"
            android:layout_gravity="center_horizontal" />

        <Button
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:text="继续验证"
        android:id="@+id/button3"
        android:background="@drawable/btn_round_gray_outline_selector"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="24dp" />

</LinearLayout>
</FrameLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.zhitian.mybole.activity.shareactivity.PublishActivity"
    android:background="#f2f2f2">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView3"
        android:fillViewport="false">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusableInTouchMode="false">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.facebook.drawee.view.SimpleDraweeView
                    android:layout_width="77dp"
                    android:layout_height="77dp"
                    android:id="@+id/iv_share_image"
                    android:layout_marginLeft="10dp"
                    android:background="#e6e6e6"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="更改"
                    android:id="@+id/tv_change_image"
                    android:textSize="14dp"
                    android:textColor="#feb416"
                    android:layout_marginLeft="9dp"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="7.5dp" />

            </LinearLayout>

            <include layout="@layout/divider_h_no_margin"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:id="@+id/editText"
                android:textColor="#4d4d4d"
                android:text="这是一个标题"
                android:textSize="15dp"
                android:background="#ffffff"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:maxLength="40" />

            <include layout="@layout/divider_h_no_margin"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="9dp"
                android:id="@+id/textView16" />

            <include layout="@layout/divider_h_no_margin"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="124dp"
                android:background="#ffffff">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:inputType="textMultiLine"
                    android:ems="10"
                    android:id="@+id/et_content"
                    android:gravity="left|top"
                    android:hint="您可填写奖品相关详细信息"
                    android:textColor="#4d4d4d"
                    android:textSize="15dp"
                    android:background="@null"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:textColorHint="#cccccc"
                    android:maxLength="200" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="138"
                    android:id="@+id/tv_content_count"
                    android:layout_gravity="bottom|right"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="10dp"
                    android:textColor="#cccccc"
                    android:textSize="12dp" />
            </LinearLayout>

            <include layout="@layout/divider_h_no_margin"/>

            <android.support.percent.PercentRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    app:layout_widthPercent="40%"
                    app:layout_marginLeftPercent="10%">

                    <ImageButton
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:id="@+id/ib_wechat_friend"
                        android:background="@drawable/wechat_friend_btn_selector"
                        android:layout_gravity="center_horizontal" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="分享到微信好友"
                        android:id="@+id/textView28"
                        android:layout_gravity="center_horizontal"
                        android:textColor="#4d4d4d"
                        android:textSize="14dp"
                        android:layout_marginTop="10dp" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    app:layout_widthPercent="40%"
                    app:layout_marginRightPercent="10%">

                    <ImageButton
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:id="@+id/ib_wechat_circle"
                        android:background="@drawable/wechat_circle_btn_selector"
                        android:layout_gravity="center_horizontal" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="分享到朋友圈"
                        android:id="@+id/textView27"
                        android:layout_gravity="center_horizontal"
                        android:textSize="14dp"
                        android:textColor="#4d4d4d"
                        android:layout_marginTop="10dp" />
                </LinearLayout>



            </android.support.percent.PercentRelativeLayout>


        </LinearLayout>
    </ScrollView>
</RelativeLayout>
